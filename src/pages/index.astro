---
import Global from '$layouts/Global.astro';
---

<Global>
	<div class="links">
		<a href="/wiki" class="button outline">Wiki</a>
		<a href="/tools" class="button outline">Tools</a>
	</div>
</Global>

<style>
	.links {
		width: 100%;
		height: 100%;

		display: flex;
		align-items: center;
		justify-content: center;
		gap: 16px;

		a {
			font-size: 2rem;
			padding: 32px 64px;
			text-align: center;
		}

		@media (max-width: 768px) {
			flex-direction: column;
			align-items: stretch;
			gap: 8px;

			a {
				display: grid;
				place-items: center;
				font-size: 3rem;
				flex-basis: 50%;
			}
		}
	}
</style>
