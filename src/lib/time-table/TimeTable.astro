---
import type { LiveTimes } from '$lib/types/liveTimes.d';
// import { Code } from 'astro:components';
import Service from './Service.astro';

interface Props {
	times: LiveTimes;
}

const { services } = Astro.props.times;
---

<section>
	<table>
		<tr>
			<th>Depature Time</th>
			<th>From</th>
			<th>To</th>
			<th>TOC</th>
			<th>UID</th>
			<th>Class</th>
			<th></th>
		</tr>

		{services?.map((service) => <Service {service} />)}
	</table>
</section>

<section>
	<details>
		<summary>view raw</summary>

		<pre><code>{JSON.stringify(Astro.props.times, null, 2)}</code></pre>
		<!-- <Code
			code={JSON.stringify(Astro.props.times, null, 2)}
			lang="json"
			theme="vitesse-dark"
		/> -->
	</details>
</section>

<style lang="scss">
	th {
		background-color: #1e1e1f;
		position: sticky;
		top: 0;
	}
</style>
